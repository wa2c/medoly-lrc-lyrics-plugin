<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="@dimen/dialog_horizontal_margin"
        android:paddingTop="@dimen/dialog_vertical_margin"
        android:paddingEnd="@dimen/dialog_horizontal_margin"
        android:paddingBottom="@dimen/dialog_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/dialogAboutAppIconImageView"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:contentDescription="@null"
                    app:srcCompat="@drawable/ic_launcher" />

                <TextView
                    android:id="@+id/dialogAboutAppNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/dialogAboutAppIconImageView"
                    android:layout_toRightOf="@+id/dialogAboutAppIconImageView"
                    android:text="@string/app_name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/primary_text_dark"
                    tools:textStyle="bold" />

                <TextView
                    android:id="@+id/dialogAboutAppVersionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialogAboutAppNameTextView"
                    android:layout_alignStart="@+id/dialogAboutAppNameTextView"
                    android:layout_alignLeft="@+id/dialogAboutAppNameTextView"
                    android:layout_alignEnd="@+id/dialogAboutAppNameTextView"
                    android:layout_alignRight="@+id/dialogAboutAppNameTextView"
                    android:gravity="center_horizontal"
                    android:text="@string/label_dialog_about_ver" />

                <TextView
                    android:id="@+id/dialogAboutAppDescriptionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/dialogAboutAppVersionTextView"
                    android:layout_alignStart="@+id/dialogAboutAppNameTextView"
                    android:layout_alignLeft="@+id/dialogAboutAppNameTextView"
                    android:text="@string/app_description"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

            </RelativeLayout>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                tools:layout_width="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/label_dialog_about_developer"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_header_separator"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        android:id="@+id/dialogAboutDeveloperTextView"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_author" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/label_dialog_about_email"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_header_separator"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        android:id="@+id/dialogAboutEmailTextView"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:text="@string/app_mail_domain" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/label_dialog_about_license"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_header_separator"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        android:id="@+id/dialogAboutLicenseTextView"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_license" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/label_dialog_about_google_play"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_header_separator"
                        android:textColor="@android:color/secondary_text_dark" />

                    <TextView
                        android:id="@+id/dialogAboutGooglePlayTextView"
                        style="@android:style/TextAppearance.Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/label_dialog_about_link" />
                </TableRow>

            </TableLayout>

            <LinearLayout
                android:id="@+id/dialogAboutLibraryLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="fill_horizontal"
                android:orientation="vertical">

                <TextView
                    style="@android:style/TextAppearance.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:lines="1"
                    android:text="@string/label_dialog_about_library"
                    android:textColor="@android:color/secondary_text_dark" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</layout>
